<?xml version="1.0" encoding="UTF-8"?>
<configurations>
  <configuration>
    <name>local</name>
    <description>Configuration for the HBase cluster.</description>
    <hbase_master>localhost</hbase_master>
    <schema>
      <table>
        <name>tablename</name>
        <description>A table.</description>
        <column_family>
          <name>columnA</name>
          <description>Column A.</description>
          <!-- Default: 3 -->
          <max_versions/>
          <!-- Default: None -->
          <compression/>
          <!-- Default: false -->
          <in_memory/>
          <!-- Default: true -->
          <block_cache_enabled/>
          <!-- Default: 64k -->
          <block_size/>
          <!-- Default: Integer.MAX_VALUE (forever) -->
          <time_to_live/>
          <!-- Default: false -->
          <bloom_filter/>
        </column_family>
      </table>
    </schema>
  </configuration>
</configurations>